
## loading this script into the master caauses ixsentence to update automatically!

ixsentence = 1;

nextsentenabled = (ixsentence < 100);
nextsentlab is (ixsentence < 100) ? "OK" : "Rogue Button" ;

nextsentence is Button("nextsent", nextsentlab, 70, 60, nextsentenabled);

proc readnexts : nextsent_clicked {
  	writeln(ixsentence);
        if (ixsentence<100) ixsentence = ixsentence + 1;
}

picture is [nextsentence];
