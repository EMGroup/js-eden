## Pour Agent

input = @;
opt = @;

## Init Pour Agent
when (input) {
	updating = 1;
	if (input == 5) {
		content5 = contentA + contentB;
		contentB is content5 - contentA;
		opt = 6 if valid6 else 7;
	} else {
		opt = input;
	}
}

when (opt == 1 && valid1) {
	wait viscosity;
	contentA++;
}

when (opt == 2 && valid2) {
	wait viscosity;
	contentB++;
}

when (opt == 3 && valid3) {
	wait viscosity;
	contentA--;
}

when (opt == 4 && valid4) {
	wait viscosity;
	contentB--;
}

when (opt == 6 && valid6) {
	wait viscosity;
	contentA--;
}

when (opt == 7 && valid7) {
	wait viscosity;
	contentA++;
}

when (menustatus[opt] == false && updating == 1) {
	contentA = contentA;
	contentB = contentB;
	updating = 0;
}

